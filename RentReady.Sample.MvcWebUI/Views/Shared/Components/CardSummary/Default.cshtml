@model RentReady.Sample.MvcWebUI.Models.CardSummaryViewModel

<ul class="dropdown-menu">
    @foreach (var item in Model.Card.CardLines)
    {
        <li>
            <a>@item.Product.ProductName <span class="badge">@item.Quantity</span></a>
        </li>
    }

    <li role="separator" class="divider"></li>
    <li>
        <a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true"></span>@Model.Card.Total</a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a asp-controller="Card" asp-action="List">Go to cart details</a>
    </li>
</ul>