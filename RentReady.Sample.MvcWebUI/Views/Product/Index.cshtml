
@{
    ViewData["Title"] = "Rent Ready Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-responsive">
    <tr>
        <td>Product Name</td>
        <td>Unit Price</td>
        <td>ManWork/Day</td>
        <td></td>
    </tr>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.WorkDay</td>
            <td>
                <a class="btn btn-xs btn-success" asp-controller="Card" asp-action="AddToCard" asp-route-productId="@product.ProductId">add to card</a>
            </td>
        </tr>
    }
</table>

<product-list-pager current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize"></product-list-pager>


